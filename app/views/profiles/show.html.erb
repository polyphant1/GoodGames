<div class="page-header">
    <h1><%= @user.profile_name %></h1>
    <%= link_to "Add Friend", new_user_friendship_path(friend_id: @user) %>
</div>


<% if @statuses %>
    <% @statuses.each do |status| %>
        <div class = "well">
            <%= status.context %>
            <%= status.user_id %>
            <hr />
            <%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
        </div>
    <% end %>
<% end %>
