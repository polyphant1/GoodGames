
<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Timeline</h1>
    </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Status', new_status_path, class: "btn btn-success" %>
<% else %>
  <p>Please login to post a status</p>
<% end %>


<% @statuses.each do |status| %>
  <div class="status">
    <div class="row">
      <div class="col-md-1">
        <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
      </div>
      <div class="col-md-10">
        <b><%= status.user.full_name %></b>
        <p><%= status.context %></p>
        <div class="meta">
          <%= time_ago_in_words(status.created_at) + " ago" %>
          | <%= link_to 'Show', status %>
          
          <span class="admin">
             | <%= link_to 'Edit', edit_status_path(status) %>
             | <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
          
        </div>
      </div>
    </div>
  </div>
<% end %>

<br>


