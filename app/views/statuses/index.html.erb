
<div class="page-header"><h1>Timeline</h1></div>

<%= link_to 'New Status', new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <b><%= status.user.full_name %></b>
    <p><%= status.context %></p>
    <div class="meta">
      <%= time_ago_in_words(status.created_at) + " ago" %>
      | <%= link_to 'Show', status %>
      
      <span class="admin">
        | <%= link_to 'Edit', edit_status_path(status) %> |
        <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>
  </div>
<% end %>

<br>


